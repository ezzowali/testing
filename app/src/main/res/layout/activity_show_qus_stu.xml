<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/answer"
    android:fillViewport="true"> <!--IMPORTANT otherwise backgrnd img. will not fill the whole screen -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".show_qus">

        <Button
            android:id="@+id/b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/text_view_countdow"
            android:layout_alignEnd="@+id/imageView"
            android:layout_marginTop="-13dp"
            android:layout_marginEnd="9dp"
            android:text="التالي"
            app:backgroundTint="#B9EAEC" />

        <TextView
            android:id="@+id/text_view_countdow"
            android:layout_width="71dp"
            android:layout_height="wrap_content"

            android:layout_marginBottom="409dp"
            android:text="00:00"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="378dp"
            android:layout_height="66dp"
            android:layout_below="@+id/text_view_countdow"
            android:layout_alignParentTop="true"
            android:layout_marginTop="38dp"
            android:gravity="center"
            android:text=" "
            android:textSize="30dp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/answersgrp"
            android:layout_width="68dp"
            android:layout_height="211dp"
            android:layout_below="@+id/tv1"
            android:layout_marginStart="-5dp"
            android:layout_marginLeft="-5dp"
            android:layout_marginTop="300dp"
            android:layout_marginBottom="-617dp"
            android:clickable="true">


            <RadioButton
                android:id="@+id/radioButton"
                android:layout_below="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="A" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_below="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="B" />


            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_below="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"



                android:checked="false"
                android:text="C" />

            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/tv1"

                android:checked="false"
                android:text="D" />


        </RadioGroup>


        <ImageView
            android:layout_below="@+id/answersgrp"
            android:id="@+id/imageView"
            android:layout_width="387dp"
            android:layout_height="107dp"
            android:layout_marginTop="160dp"

            android:layout_weight="1"

            />





    </RelativeLayout>
</ScrollView>