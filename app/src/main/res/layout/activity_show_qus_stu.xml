<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".show_Qus_stu"
    android:background="@drawable/answer"
    android:paddingTop="@dimen/activity_vertical_margin" android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:id="@+id/text_view_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/b1"
        android:layout_alignLeft="@+id/b1"
        android:layout_alignBottom="@+id/b1"
        android:layout_marginStart="79dp"
        android:layout_marginLeft="79dp"
        android:layout_marginBottom="375dp"
        android:text="00:00"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/DispName"
        android:layout_width="227dp"
        android:layout_height="78dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/accent_material_light" />



    -<RadioGroup android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/answersgrp" android:layout_centerVertical="true" android:clickable="true" android:layout_alignStart="@+id/DispName" android:layout_alignLeft="@+id/DispName">

    <!--android:layout-->


    <!--android:checkedButton="@+id/radioButton"-->


    <RadioButton android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/radioButton"
        android:checked="false"
        android:text="A"/>

    <RadioButton android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/radioButton2"
        android:checked="false"
        android:text="B"/>


    <RadioButton android:layout_height="wrap_content"
        android:id="@+id/radioButton3"
        android:layout_width="wrap_content"

        android:layout_above="@+id/answersgrp"

        android:checked="false"
        android:text="C" />

    <RadioButton android:layout_height="wrap_content"
        android:id="@+id/radioButton4"
        android:layout_width="wrap_content"

        android:layout_above="@+id/answersgrp"

        android:checked="false"
        android:text="D" />


</RadioGroup>

    <Button
        android:id="@+id/b1"
        android:layout_width="200dp"
        android:layout_height="-52dp"

        android:layout_alignStart="@+id/answersgrp"
        android:layout_alignLeft="@+id/answersgrp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="70dp"

        android:layout_marginLeft="70dp"
        android:layout_marginBottom="78dp"
        android:background="#AA1648"
        android:text=" التالي"
        android:textColor="#ffffff"
        android:textSize="30dp"
        app:backgroundTint="#AA1648" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:text=" "
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="332dp"
        android:layout_height="258dp"


        android:layout_alignBottom="@+id/b1"
        android:layout_marginBottom="455dp"
        android:layout_weight="1" />


</RelativeLayout>