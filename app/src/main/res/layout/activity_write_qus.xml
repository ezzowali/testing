<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/wriutteq"
    android:fillViewport="true"> <!--IMPORTANT otherwise backgrnd img. will not fill the whole screen -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".write_Qus">

        <EditText
            android:id="@+id/ed1"
            android:layout_width="336dp"
            android:layout_height="61dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="36dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="73dp"
            android:autofillHints=""
            android:ems="10"
            android:hint="اكتب السؤال "

            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            android:selectAllOnFocus="true" />

        <EditText
            android:id="@+id/ed2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ed1"
            android:layout_alignStart="@+id/ed1"
            android:layout_alignLeft="@+id/ed1"
            android:layout_alignEnd="@+id/ed1"
            android:layout_alignRight="@+id/ed1"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:ems="10"
            android:hint="الاختيار الاول "
            android:inputType="textPersonName" />


        <EditText
            android:id="@+id/ed3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ed2"
            android:layout_alignStart="@+id/ed2"
            android:layout_alignLeft="@+id/ed2"
            android:layout_alignEnd="@+id/ed2"
            android:layout_alignRight="@+id/ed2"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:ems="10"
            android:hint="الاختيار الثاني  "
            android:inputType="textPersonName" />


        <EditText
            android:id="@+id/ed5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ed3"
            android:layout_alignStart="@+id/ed3"
            android:layout_alignLeft="@+id/ed3"
            android:layout_alignEnd="@+id/ed3"
            android:layout_alignRight="@+id/ed3"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:ems="10"
            android:hint="الاختيار الثالث"
            android:inputType="textPersonName" />


        <EditText
            android:id="@+id/ed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ed5"
            android:layout_alignStart="@+id/ed5"
            android:layout_alignLeft="@+id/ed5"
            android:layout_alignEnd="@+id/ed5"
            android:layout_alignRight="@+id/ed5"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:ems="10"
            android:hint="الاختيار الرابع "
            android:inputType="textPersonName" />


        <EditText
            android:id="@+id/ed4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ed"
            android:layout_alignStart="@+id/ed"
            android:layout_alignLeft="@+id/ed"
            android:layout_alignEnd="@+id/ed"
            android:layout_alignRight="@+id/ed"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:ems="10"
            android:hint="الاختيار الصحيح"
            android:inputType="textPersonName" />




        <Button
            android:id="@+id/buttonChoose"
            style="@android:style/Widget.Button"
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ed4"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"

            android:layout_marginTop="50dp"
            android:text="ارفق صورة"
            android:background="#C9FDA4"

            />



        <Button
            android:id="@+id/b1"
            style="@android:style/Widget.Button"
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonChoose"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="50dp"
            android:background="#C9FDA4"
            android:text="تسجيل السؤال "

            android:textSize="16sp"
            android:textStyle="normal|bold"
            app:backgroundTint="#C9FDA4" />

        <Button
            android:id="@+id/button"
            style="@android:style/Widget.Button"
            android:layout_width="166dp"
            android:layout_below="@+id/b1"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/b1"
            android:layout_alignLeft="@+id/b1"
            android:layout_alignTop="@+id/b1"
            android:layout_alignEnd="@+id/b1"
            android:layout_alignRight="@+id/b1"
            android:layout_alignBottom="@+id/b1"
            android:layout_marginStart="87dp"
            android:layout_marginLeft="87dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="-56dp"
            android:background="#C9FDA4"
            android:text="خروج"
            android:textSize="16sp"
            android:textStyle="normal|bold"
            app:backgroundTint="#C9FDA4" />

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button"
            android:layout_weight="1"

            android:id="@+id/imageView" />


    </RelativeLayout>
</ScrollView>