<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/uploadz"
    android:orientation="horizontal"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/buttonChoose"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginTop="550dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="-111dp"
        android:text="اختر الصورة"
        app:backgroundTint="#3C99C6" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="438dp"
        android:layout_weight="1" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="-90dp"
        android:gravity="center"

        android:hint="اكتب السؤال المرتبط بالصورة المراد اضافتها هنا" />

    <Button
        android:id="@+id/buttonUpload"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonChoose"
        android:layout_marginStart="65dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="600dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="-45dp"
        android:layout_marginBottom="-53dp"
        android:baselineAligned="false"
        android:text="رفع الصورة"
        app:backgroundTint="#3C99C6" />


</RelativeLayout>